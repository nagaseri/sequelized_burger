<h1>Eat The Burger!</h1>

<img class="burger_img" src="/assets/img/burger.png" alt="burger" height="200px" width="200px">
<div>
	<div class="burger1">
		<ul>
			<h2>Burgers!</h2>
			{{#each burgers}}
				{{#unless this.devoured}}
					<li>
						{{this.burger_name}}
						<br>
						<form action="/{{this.id}}?_method=PUT" method="POST">
							<input type="hidden" name="devoured" value="true">
							<button type="submit" class="btn btn-default">Eat Burger</button>
						</form>
					</li>
				{{/unless}}
			{{/each}}
		</ul>
	</div>
	<div class="burger2">
	<h2>Eaten Burgers!</h2>
		<ul>
			{{#each burgers}}
				{{#if this.devoured}}
					<li>
						{{this.burger_name}}
						<form action="/{{this.id}}?_method=PUT" method="POST">
							<input type="hidden" name="devoured" value="false">
							<!-- <button type="submit" class="btn btn-default">Un Eat?</button> -->
						</form>
					</li>
				{{/if}}
			{{/each}}
		</ul>
	</div>
	<div class="burger3">
		<h2>Add a Burger!</h2>
		<form class="create-update-form" action="/" method="POST">
		  <div class="form-group">
		    <input type="text" id="burger" name="name">
		  	<button type="submit">Add Burger</button>
		  </div>
		</form>
	</div>
</div>