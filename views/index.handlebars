<h1>Eat The Burger!</h1>

<img src="/assets/img/burger.png" alt="burger" height="200px" width="200px">

<h2>Eat the Burger!</h2>
<div class="burger1">
	<ul>
		{{#each burgers}}
			{{#unless this.devoured}}
				<li>
					{{this.burger_name}}
					<form action="/{{this.id}}?_method=PUT" method="POST">
						<input type="hidden" name="devoured" value="true">
						<button type="submit" class="btn btn-default">Eat Burger</button>
					</form>
				</li>
			{{/unless}}
		{{/each}}
	</ul>
</div>
<h2>Eaten Burgers!</h2>
<div class="burger2">
	<ul>
		{{#each burgers}}
			{{#if this.devoured}}
				<li>
					{{this.burger_name}}
					<form action="/{{this.id}}?_method=PUT" method="POST">
						<input type="hidden" name="devoured" value="false">
						<button type="submit" class="btn btn-default">Un Eat?</button>
					</form>
				</li>
			{{/if}}
		{{/each}}
	</ul>
</div>
<h2>Add a Burger!</h2>
<form class="create-update-form" action="/" method="POST">

  <div class="form-group">
    <input type="text" id="burger" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>

<p> Enter a burger you want to eat </p>